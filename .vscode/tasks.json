{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run app (watching for changes)",
      "command": "./tools/ibazel run //:app.dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "Test app",
      "command": "./tools/ibazel run //:app_test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "type": "shell",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
